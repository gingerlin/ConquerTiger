<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@android:color/white">

    <TextView
        android:id="@+id/wrodSeq"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
    
    <TextView
        android:id="@+id/problem"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/wrodSeq"      
        android:gravity="center"/>

    <Button
        android:id="@+id/select1"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/problem"
        android:layout_alignParentLeft="true"
        android:background="@drawable/smallbutton" />

    <Button
        android:id="@+id/select2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/select1"        
        android:layout_alignParentLeft="true"
        android:background="@drawable/smallbutton" />

    <Button
        android:id="@+id/select3"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/problem"        
        android:layout_alignParentRight="true"
        android:background="@drawable/smallbutton" />
    
    <Button
        android:id="@+id/select4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_below="@+id/select3"        
        android:layout_alignParentRight="true"
        android:background="@drawable/smallbutton" />
    
</RelativeLayout>

